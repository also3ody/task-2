#include <iostream>

using namespace std;

int main ()
{
    int num1,num2;
    char op;
    cout << "please enter the first number then the operator then the second number :\n";
    cin >> num1>>op>>num2;
    switch(op)
    {
        case '+':
            cout <<num1<<" + "<<num2<<" = "<<num1+num2;
            break;
        case '-':
            cout <<num1<<" - "<<num2<<" = "<<num1-num2;
            break;
        case '/':
            cout <<num1<<" / "<<num2<<" = "<<num1/num2;
            break;
        case '*':
            cout <<num1<<" * "<<num2<<" = "<<num1*num2;
            break;
        case '%':
            cout <<num1<<" % "<<num2<<" = "<<num1%num2;
            break;
        default:
            cout << "invalid input";
    }
}
